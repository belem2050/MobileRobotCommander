<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileRobotCommander.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileRobotCommander"
    xmlns:pages="clr-namespace:MobileRobotCommander.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MobileRobotCommander">

    <FlyoutItem Title="Robot Commander" Icon="robot.png">
        <ShellContent Title="Robot Commander" ContentTemplate="{DataTemplate pages:MainPage}" 
                      Route="MainPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="setting.png">
        <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}"/>
    </FlyoutItem>
    
    <FlyoutItem Title="About" Icon="about.png">
        <ShellContent ContentTemplate="{DataTemplate pages:AboutPage}" />
    </FlyoutItem>

</Shell>
