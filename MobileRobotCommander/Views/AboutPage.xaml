<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileRobotCommander.Views.AboutPage"
             Title="About"
             BackgroundColor="LightSlateGray">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="20">

            <Label Text="Mobile Robot Commander" 
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   TextColor="Black" 
                   Padding="0,20,0,10"/>

            <Frame Padding="10" 
                   CornerRadius="12" 
                   BackgroundColor="Transparent"
                   HasShadow="True"
                   BorderColor="Black">
                <VerticalStackLayout>
                    <Label Text="Version" 
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black" />
                    <Label Text="1.0.0" 
                           FontSize="16" 
                           TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

            <Frame  Padding="10" 
                    CornerRadius="12" 
                    BackgroundColor="Transparent"
                    HasShadow="True"
                    BorderColor="Black">
                <VerticalStackLayout>
                    <Label Text="Developer" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="Black" />
                    <Label Text="Moumouni BELEM" 
                           FontSize="16" 
                           TextColor="Black" />
                    <Label Text="Engineer in Robotics and AI" 
                           FontSize="16" 
                           TextColor="Black" />
                </VerticalStackLayout>
            </Frame>


            <Frame  Padding="10" 
                    CornerRadius="12" 
                    BackgroundColor="Transparent"
                    HasShadow="True"
                    BorderColor="Black">
                <VerticalStackLayout>
                    <Label Text="Contact" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="Black" />

                    <Label Text="Email:" 
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    <Label Text="moumouni.belem.ing@gmail.com" 
                           FontSize="16" 
                           TextColor="Black"
                           TextDecorations="Underline">
                           <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnLabelTapped" />
                           </Label.GestureRecognizers>
                    </Label>
                    <Label Text="LinkedIn:" 
                       FontSize="16"
                           FontAttributes="Bold"
                       TextColor="Black"/>

                    <Label Text="https://www.linkedin.com/in/belem2050" 
                           FontSize="16" 
                           TextColor="Black"
                           TextDecorations="Underline">
                        <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnLabelTapped" />
                           </Label.GestureRecognizers>
                    </Label>

                    <Label Text="Website:" 
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    <Label Text="https://belem2050.github.io/" 
                           FontSize="16" 
                           TextColor="Black"
                           TextDecorations="Underline">
                        <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnLabelTapped" />
                           </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </Frame>

            <Frame  Padding="10" 
                    CornerRadius="15"
                    BackgroundColor="Transparent"
                    HasShadow="True"
                    BorderColor="Black">
                <VerticalStackLayout>
                    <Label Text="GitHub Repository" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="Black" 
                           />
                    <Label Text="https://github.com/belem2050/MobileRobotCommander" 
                           FontSize="16" 
                           TextColor="Black"
                            TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLabelTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </Frame>

            <Frame  Padding="10" 
                    CornerRadius="12" 
                    BackgroundColor="Transparent"
                    HasShadow="True"
                    BorderColor="Black">
                <VerticalStackLayout>
                    <Label Text="Acknowledgments" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="Black" />
                    <Label Text="Thanks to all contributors and the open-source community." 
                           FontSize="16" 
                           TextColor="Black" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
